{% extends "old-version/layout.njk" %}

{% block head %}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>Projetos</title>
{% endblock %}

{% block content %}

    <header>
        <div id="header-links">
            <a href="/" id="about-link">Sobre</a>
            <a href="./projects" id ="projects-link" class="selected">Projetos</a>
        </div>

    </header>

    {# <div id="block-title">
        <h1>Projetos</h1>
    </div> #}

    <section class="cards">

        {% for item in items %}

        <div class="card" id="{{item.id}}">
            <div class="card-image-container">
                <div class="image-container">
                    <a href="{{item.link}}" target="_blank">
                        <img src="assets/images/{{item.id}}.png" alt="Imagem de {{item.title}}">
                    </a>
                </div>
            </div>
            <div class="card-content">
                <a href="{{item.link}}" target="_blank">
                    <h2>{{item.title}}</h2>
                </a>

                <div class="content-group-top">
                    <p>{{item.description}}</p>
                </div>

                <div class="content-group">
                    <div class="icon-wrapper">
                        <i class="material-icons">{{item.moduleIcon}}</i>
                    </div>
                    <p>{{item.module}}</p>
                </div>

                <div class="content-group">
                    <div class="icon-wrapper">
                        <i class="material-icons">memory</i>
                    </div>
                    <p>{{item.environment}}</p>
                </div>
                
                {% if item.repo !== "" %}
                <div class="button-wrapper">
                    <button type="button" class="view-repo">
                        <a href="{{item.repo}}" class="link-group" target="_blank" rel="noopener noreferrer">
